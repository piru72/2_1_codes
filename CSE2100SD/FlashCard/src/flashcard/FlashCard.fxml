<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="scenePane" prefHeight="400.0" prefWidth="600.0" stylesheets="@flashcard.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flashcard.FlashCardController">
   <children>
      <ImageView fitHeight="434.0" fitWidth="868.0" layoutX="-34.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@back_1.jpg" />
         </image>
      </ImageView>
      <Button fx:id="exitButton" layoutX="258.0" layoutY="255.0" mnemonicParsing="false" onAction="#exitAction" text="Exit" textFill="#ff5418">
         <font>
            <Font size="26.0" />
         </font></Button>
      <Label fx:id="titleLabel" layoutX="144.0" layoutY="54.0" text="FLASH CARD" textFill="#f5f5f5">
         <font>
            <Font name="Arial Black" size="52.0" />
         </font>
      </Label>
      <Button fx:id="createCardButton" alignment="TOP_LEFT" contentDisplay="CENTER" layoutX="169.0" layoutY="131.0" mnemonicParsing="false" onAction="#createCardAction" text="CREATE FLASH CARD" textAlignment="CENTER" textFill="WHITE" textOverrun="WORD_ELLIPSIS">
         <font>
            <Font name="Marlett" size="26.0" />
         </font></Button>
      <Button fx:id="playCardbutton" alignment="CENTER" layoutX="185.0" layoutY="191.0" mnemonicParsing="false" onAction="#playCardAction" text="PLAY FLASH CARD" textFill="WHITE">
         <font>
            <Font size="26.0" />
         </font></Button>
   </children>
</AnchorPane>
